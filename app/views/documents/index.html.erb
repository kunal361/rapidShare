<title>Documents</title>
<div id="container">
  <div id="docs" style="width: 200px">
    <%@documents.each do |document|%>
      <div class="doc" style="border: 1px solid;width: 100%">
        Document:<a class ="link" href='<%=document.document.url%>'><%=document.name%></a>
        <p class="description">Description: <%=document.description%><p>
        <%if document.user_id == session[:user_id] || current_user.admin? %>
          <%= link_to "Delete", "/delete_document/#{document.id}", :method => "delete" %>
        <%end%>
      </div>
    <%end%>
  </div>
</div>